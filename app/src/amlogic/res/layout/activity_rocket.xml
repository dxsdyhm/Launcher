        <ImageView android:id="@+id/iv_cloud" android:background="@drawable/desktop_smoke_m" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
